<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#cccccc"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    >


    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="left"
        android:padding="6dp"
        android:background="#FFFFFF"
        android:text="Dummy text" />


    <!-- SHOEHORN IT IN -->
    <ImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="50dp"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="#5cccbb22"
        android:alpha="0.8"
        android:textColor="#fff"
        android:textSize="26sp"
        android:text="TVTitle"
        android:layout_alignBottom="@+id/img_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tvdesc"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:alpha="0.8"
        android:textColor="#e71cd2"
        android:textSize="15dp"
        android:text="TVDesc Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test TVTWO Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test TVTHREE Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test"
        android:layout_below="@+id/tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <!-- SHOEHORN IT IN -->

</LinearLayout>