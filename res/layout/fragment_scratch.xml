<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_above="@id/footer"
    android:layout_below="@id/header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    tools:context=".FragmentScratch"
    android:id="@+id/fragment_scratch"
    >

    <TextView
        android:text="Scratchable Meeee"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crumbMain"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="false" />


    <scratch.WScratchView
        android:id="@+id/scratch_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/btnFooterRail"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="450dp">

        <Button
            android:text="Scratch Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:layout_marginBottom="14dp"
            android:id="@+id/btnGotoScratch"
            android:onClick="selectFrag" />
    </LinearLayout>

</RelativeLayout>